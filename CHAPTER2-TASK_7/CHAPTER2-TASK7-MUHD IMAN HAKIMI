package dcbs7.javaproject;

/**
 *
 * @author maste
 */
import java.io.*;

public class CompoundProg {
        public static void main(String [] args){
            
            //declare variable
            int a = 2;
            int b = 2;
            int c = 2;
            int d = 2;
            
            //output for information about the value given
            System.out.print("  --- Information of value given ---  \n");
            System.out.println("  a = " +a);
            System.out.println("  b = " +b);
            System.out.println("  c = " +c);
            System.out.println("  d = " +d);
            
            //pre increment
            System.out.println("pre increment -");
            System.out.println(" a++ : " + (a++));
            
            //post increment
            System.out.println("post increment -");
            System.out.println(" ++b : " + (++b));
            System.out.println("b after post increment : " + b);
            
            //pre decrement
            System.out.println("pre decrement -");
            System.out.println(" --c : " + (--c));
            
            //post decrement
            System.out.println("post decrement -");
            System.out.println(" d-- : " + (d--));
            System.out.println("d after post decrement : " + d);
        }
}
