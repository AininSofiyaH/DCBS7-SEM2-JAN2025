/**
 *
 * @author maste
 */
import java.io.*;
import java.util.Scanner;
public class BeliSistem {
    
    
    public static void main(String[] args){
        
        //declare variable
        Scanner tekan = new Scanner(System.in);
        int categoryNum = 0;
        double discount = 0;
        int quantity, pilih;
        double price;
        String item, category = null;
        
        //Kedai
        System.out.println("- Purchase System -");
        
        //input
        System.out.println("Select the item category: ");
        System.out.println("1. Electronics");
        System.out.println("2. Accessory");
        System.out.println("3. Commodities");
        System.out.print("Enter your number: ");
        categoryNum = tekan.nextInt();
        tekan.nextLine();
        
        //switch for category
        switch(categoryNum){
            case 1:
                category = ("Electronics");
                System.out.print(category); break;
             case 2:
                category = ("Accessory");
                System.out.print(category); break;
             case 3:
                category = ("Commodities");
                System.out.print(category); break;
             default:
                 System.out.println("Wrong input...");
        }
        
        //input info
        System.out.println("\nEnter nama barang: ");
        item = tekan.nextLine();
        
        System.out.println("Enter your harga barang: ");
        price = tekan.nextDouble();
        tekan.nextLine();
        
        System.out.println("Enter bilangan barang: ");
        quantity = tekan.nextInt();
        tekan.nextLine();
        
        //discount menu
        System.out.println("Choose your discount: ");
        System.out.println("1. 10%");
        System.out.println("2. 15%");
        System.out.println("3. 20%");
        System.out.println("4. 25%");
        System.out.println("Enter the number: ");
        pilih = tekan.nextInt();
        
        //switch for discount rate by choice
        switch(pilih){
            case 1:
                discount = 10; break;
            case 2:
                discount = 15; break;
            case 3:
                discount = 20; break;
            case 4:
                discount = 25; break;
            default:
                System.out.println("Wrong input..."); break;
        }
        
        // formula total price
        double totalPrice = price * quantity;

        // formula total discount 
        double discountAmount = totalPrice * (discount / 100);

        // formula discount applied
        double priceAfterDiscount = totalPrice - discountAmount;

        // output info
        System.out.println("\n");
        System.out.println("- Item Information -");
        System.out.println("Category: " + category);
        System.out.println("Item name: " + item);
        System.out.println("Price: RM" + price);
        System.out.println("Quantity: " + quantity);
        System.out.println("Total price: RM" + totalPrice);
        System.out.println("Discount: " + discount + "%");
        System.out.println("Price after discount: RM" + priceAfterDiscount);

        // close scanner function
        tekan.close();
    }
}
