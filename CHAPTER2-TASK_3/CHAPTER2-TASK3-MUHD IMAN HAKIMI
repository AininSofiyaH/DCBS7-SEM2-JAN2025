package dcbs7.javaproject;

/**
 *
 * @author maste
 */
// Import the needed built-in package
import java.io.*;
import java.util.Scanner;

public class AgeCalculator {
    public static void main(String[] args) throws IOException { //IOException just in case 
        
        // scanner class
        Scanner tekan;
        tekan = new Scanner(System.in);
        
        // Declare variable
        int birthYear, currentYear, age;
        
        // Question with input
        System.out.print("Enter your Birth Year: ");
        birthYear = tekan.nextInt();
        tekan.nextLine();
        
        System.out.print("Enter your Current Year: ");
        currentYear = tekan.nextInt();
        tekan.nextLine();
        
        age = currentYear - birthYear; // Make a formula for the calculation
        
        // Provide Output / calculation result
        System.out.println("Your age is " + age + " years old.");
        System.out.println("Day and Month are not included for this calculation.");
        System.out.println("Expected no further update unless bug/error.");
        
        // End the function of scanner
        tekan.close();
        
    }
}
