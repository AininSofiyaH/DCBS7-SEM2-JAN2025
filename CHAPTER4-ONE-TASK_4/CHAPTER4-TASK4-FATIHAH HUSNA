package chapter.pkg4;

/**
 *
 * @author Fatihah
 */
public class TaskForToday_4 {
    public static void main(String[] args) {
        
        //cari power of 2 pastu cari sum dia
        //structure dia sama mcm task 3
        
        int result, sum;            //declare variable
        
        sum = 0;
        for(int i = 1; i <= 10; i++){                   //buat rules dia dulu
            result = square(i);                         //calling method   //i is parameter(bnda yg kite nk pass)
                    
            System.out.println("The square of " +i +" is = " +result );          //display pwer of 2 brapa (n^2)
            sum += result;                               //calculation bila nk tambah semua        
        }
    System.out.println("\nThe sum is: " +sum);}          //display jumlah semua brapa
    
    
    public static int square(int y){                      //i tuka jadi y
        return y * y;                                     //formula square
    }
    
    }

